        "score_map": {
            "Critical": 90,
            "High": 70,
            "Medium": 40,
            "Low": 10
        },
        "evidence_fields": [
            "rsn_info",
            "capabilities.privacy",
            "wpa_info"
        ],
        "detection_rule": "capabilities.privacy == false OR rsn_info.pairwise contains 'TKIP'",
        "remediation_text": "Enable WPA2/WPA3 with AES-CCMP. If WEP, replace immediately.",
        "remediation_commands": [
            "# hostapd config",
            "wpa=2",
            "wpa_key_mgmt=WPA-PSK",
            "rsn_pairwise=CCMP",
            "wpa_passphrase=YourStrongPassphrase12+"
        ],
        "recommended_timeline": "Immediate",
        "references": [
            "https://csrc.nist.gov/publications/detail/sp/800-153/final"
        ]
    },
