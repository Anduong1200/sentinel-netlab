[Unit]
Description=WiFi Scanner Sensor API (Gunicorn)
After=network.target

[Service]
Type=simple
User=root
# Note: Running as root is required for monitor mode operations unless 
# using a privileged helper script. See docs/risk_management.md for hardening.
WorkingDirectory=/home/kali/hod_lab/sensor
ExecStart=/usr/local/bin/gunicorn -c gunicorn_conf.py api_server:app
Restart=always
RestartSec=5
EnvironmentFile=/home/kali/hod_lab/sensor/.env

[Install]
WantedBy=multi-user.target
