# Sentinel NetLab Sensor - Environment Configuration
# Copy to .env and customize

# API Security
WIFI_SCANNER_API_KEY=sentinel-dev-2024

# Network Interface
WIFI_SCANNER_INTERFACE=wlan0

# Server Settings
WIFI_SCANNER_HOST=0.0.0.0
WIFI_SCANNER_PORT=5000

# Capture Engine: scapy | tshark | queue
CAPTURE_ENGINE=tshark

# Mock Mode (no real hardware required)
WIFI_SCANNER_MOCK_MODE=false

# Active Attacks (deauth, fake AP)
ALLOW_ACTIVE_ATTACKS=false

# Debug Mode
FLASK_DEBUG=0
FLASK_ENV=production

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/wifi-scanner/sensor.log

# Prometheus Metrics
PROMETHEUS_MULTIPROC_DIR=/tmp
