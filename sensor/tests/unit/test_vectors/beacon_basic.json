{
    "description": "Test vectors for beacon_basic.pcap - parsing beacon frames from various vendors",
    "pcap": "beacon_basic.pcap",
    "matching_rules": {
        "timestamp_tolerance_ms": 500,
        "rssi_tolerance_db": 3,
        "exact_match_fields": [
            "bssid",
            "frame_type",
            "channel",
            "frequency_mhz",
            "capture_method"
        ],
        "vendor_oui_from_bssid": true
    },
    "vectors": [
        {
            "id": "beacon_1.1",
            "note": "Home AP with WPA2 (RSN) and HT capability",
            "expected": {
                "timestamp_utc": "2026-01-27T12:00:00Z",
                "capture_method": "pcap",
                "frame_type": "beacon",
                "bssid": "02:11:22:33:44:55",
                "ssid": "HomeWiFi",
                "rssi_dbm": -42,
                "channel": 6,
                "frequency_mhz": 2437,
                "vendor_oui": "02:11:22",
                "capabilities": {
                    "privacy": true,
                    "ht": true,
                    "vht": false,
                    "pmf": false,
                    "short_gi": true,
                    "wps": false,
                    "hidden_ssid": false,
                    "ies_present": [
                        "RSN",
                        "HT"
                    ]
                },
                "ie": {
                    "rsn": {
                        "cipher_suites": [
                            "CCMP"
                        ],
                        "akm": [
                            "PSK"
                        ]
                    }
                },
                "parse_error": false
            }
        },
        {
            "id": "beacon_1.2",
            "note": "Enterprise AP advertising RSN + PMF",
            "expected": {
                "frame_type": "beacon",
                "bssid": "00:16:3e:aa:bb:01",
                "ssid": "CorpNet",
                "rssi_dbm": -55,
                "channel": 36,
                "frequency_mhz": 5180,
                "vendor_oui": "00:16:3e",
                "capabilities": {
                    "privacy": true,
                    "ht": true,
                    "vht": true,
                    "pmf": true,
                    "ies_present": [
                        "RSN",
                        "VHT"
                    ]
                },
                "ie": {
                    "rsn": {
                        "cipher_suites": [
                            "CCMP"
                        ],
                        "akm": [
                            "802.1X"
                        ]
                    }
                }
            }
        },
        {
            "id": "beacon_1.3",
            "note": "Open network (no privacy)",
            "expected": {
                "frame_type": "beacon",
                "bssid": "12:34:56:78:9a:bc",
                "ssid": "Coffee-Shop",
                "rssi_dbm": -70,
                "channel": 11,
                "frequency_mhz": 2462,
                "vendor_oui": "12:34:56",
                "capabilities": {
                    "privacy": false,
                    "ht": false,
                    "vht": false,
                    "pmf": false,
                    "ies_present": []
                },
                "ie": {}
            }
        },
        {
            "id": "beacon_1.4",
            "note": "AP advertises WPS IE",
            "expected": {
                "frame_type": "beacon",
                "bssid": "de:ad:be:ef:00:01",
                "ssid": "GuestNet",
                "rssi_dbm": -48,
                "channel": 1,
                "frequency_mhz": 2412,
                "vendor_oui": "de:ad:be",
                "capabilities": {
                    "privacy": true,
                    "wps": true,
                    "ies_present": [
                        "RSN",
                        "WPS"
                    ]
                },
                "ie": {
                    "wps": {
                        "version": "1.0",
                        "config_methods": [
                            "PUSH_BUTTON"
                        ]
                    }
                }
            }
        },
        {
            "id": "beacon_1.5",
            "note": "Hidden SSID (SSID element blank) - must set ssid=null and hidden_ssid=true",
            "expected": {
                "frame_type": "beacon",
                "bssid": "aa:bb:cc:dd:ee:ff",
                "ssid": null,
                "rssi_dbm": -60,
                "channel": 44,
                "frequency_mhz": 5220,
                "vendor_oui": "aa:bb:cc",
                "capabilities": {
                    "privacy": true,
                    "hidden_ssid": true,
                    "ies_present": [
                        "RSN"
                    ]
                },
                "ie": {
                    "rsn": {
                        "cipher_suites": [
                            "CCMP"
                        ],
                        "akm": [
                            "PSK"
                        ]
                    }
                }
            }
        }
    ]
}