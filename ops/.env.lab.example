# =============================================================================
# Sentinel NetLab - Lab/Dev Environment Variables
# =============================================================================
# Usage:
#   1. Copy to .env for local development
#   2. OR run `python3 ops/gen_lab_secrets.py` to auto-generate secure .env.lab
# =============================================================================

# --- General ---
SENTINEL_ENV=lab
# LOG_LEVEL=DEBUG

# --- Secrets (Can be weak for Lab/Dev) ---
CONTROLLER_SECRET_KEY=dev-secret-key-insecure-for-lab-only
CONTROLLER_HMAC_SECRET=dev-hmac-secret-insecure-for-lab-only

# --- Database ---
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sentinel

# --- Redis ---
REDIS_PASSWORD=redis

# --- MinIO ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_BUCKET=sentinel-artifacts

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000

# --- Application Tokens ---
DASHBOARD_API_TOKEN=dev-dashboard-token
LAB_API_KEY=dev-lab-api-key

# --- Dev Tuning ---
REQUIRE_TLS=false
REQUIRE_HMAC=false
# RATE_LIMIT_DEFAULT=1000 per minute
